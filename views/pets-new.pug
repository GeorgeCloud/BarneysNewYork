extends layout

block content

  .row.justify-content-center
    .col-sm-6
      legend New Pet
      form(action="#" id="new-pet")
        .form-group
            label Name*
            input.form-control(name="name")
        .form-group
            label Birthday*
            input.form-control(name="birthday")
        .form-group
            label Species*
            input.form-control(name="species")
        .form-group
            label Rectangular Image URL*
            input.form-control(name="picUrl" type="url")
        .form-group
            label Square Image URL*
            input.form-control(name="picUrlSq" type="url")
        .form-group
            label Favorite Food*
            input.form-control(name="favoriteFood")
        .form-group
            label Description*
            textarea.form-control(name="description" minlength="20")
        button(type="submit").btn.btn-primary Save
